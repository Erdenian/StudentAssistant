<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:layout_height="wrap_content"
    tools:parentTag="androidx.cardview.widget.CardView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/card_margin_inside"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lc_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/card_primary_text_size"
                    tools:text="09:00" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" - "
                    android:textColor="@color/secondary_text"
                    android:textSize="@dimen/card_primary_text_size"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/lc_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/secondary_text"
                    android:textSize="@dimen/card_primary_text_size"
                    tools:text="10:30" />

            </LinearLayout>

            <!-- Не используется compound drawable, так как для них tint можно задать только с api 23 -->
            <LinearLayout
                android:id="@+id/lc_classrooms_parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="bottom"
                android:orientation="horizontal"
                tools:ignore="UseCompoundDrawables">

                <TextView
                    android:id="@+id/lc_classrooms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/secondary_text"
                    android:textSize="@dimen/card_secondary_text_size"
                    tools:text="4212а, 4212б" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:tint="@color/secondary_text"
                    app:srcCompat="@drawable/ic_map_marker"
                    tools:ignore="ContentDescription" />

            </LinearLayout>

        </FrameLayout>

        <include layout="@layout/divider_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lc_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/secondary_text"
                android:textSize="@dimen/card_secondary_text_size"
                tools:text="Лабораторная работа" />

            <TextView
                android:id="@+id/lc_subject_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/card_primary_text_size"
                tools:text="Интернет программирование" />

            <LinearLayout
                android:id="@+id/lc_teachers_parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lc_repeats_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            tools:ignore="UseCompoundDrawables"
            tools:visibility="visible">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:tint="@color/secondary_text"
                app:srcCompat="@drawable/ic_calendar_range"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/lc_repeats_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:textColor="@color/secondary_text"
                android:textSize="@dimen/card_secondary_text_size"
                tools:text="Каждую неделю" />

        </LinearLayout>

    </LinearLayout>

</merge>