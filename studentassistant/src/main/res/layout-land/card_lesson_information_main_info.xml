<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_information_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:layout_weight="1"
    app:cardBackgroundColor="@color/colorPrimary"

    app:cardCornerRadius="@dimen/card_view_lesson_information_radius">

    <LinearLayout
        android:id="@+id/lesson_information_main_info_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/information_lesson_name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Конструирование ПО"
            android:textColor="@color/action_bar_icons_color"
            android:textSize="23sp"/>

        <LinearLayout
            android:id="@+id/lesson_information_time_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lesson_information_start_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:text="12:20"
                android:textColor="@color/action_bar_icons_color"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/lesson_information_time_divider_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=" - "
                android:textColor="@color/action_bar_icons_color"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/lesson_information_end_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="13:50"
                android:textColor="@color/action_bar_icons_color"
                android:textSize="20sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/lesson_information_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Практика"
            android:textColor="@color/action_bar_icons_color"
            android:textSize="20sp"/>

    </LinearLayout>

</android.support.v7.widget.CardView>