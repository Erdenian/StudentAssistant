<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ScheduleCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/card_margin_inside"
        android:orientation="vertical">

        <TextView
            android:id="@+id/card_homework_subjectName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/card_primary_text_size"/>

        <include layout="@layout/divider"/>

        <TextView
            android:id="@+id/card_homework_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorSecondaryText"
            android:textSize="@dimen/card_secondary_text_size"/>

        <include layout="@layout/divider"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/card_homework_before"
                android:textColor="@color/colorSecondaryText"
                android:textSize="@dimen/card_secondary_text_size"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/card_homework_deadlineDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/card_secondary_text_size"/>

            <TextView
                android:id="@+id/card_homework_deadLineTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/card_secondary_text_size"/>

            <include layout="@layout/empty_space"/>

            <ImageView
                android:id="@+id/card_homework_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tint="@color/colorSecondaryText"
                app:srcCompat="@drawable/ic_menu_book_open_variant"
                tools:ignore="ContentDescription"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>