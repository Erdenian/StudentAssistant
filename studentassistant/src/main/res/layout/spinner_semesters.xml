<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/ss_title"
        style="@style/ActionBarTitleWhite"
        android:layout_marginLeft="@dimen/toolbar_spinner_title_margin_start"
        android:layout_marginStart="@dimen/toolbar_spinner_title_margin_start" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_menu_down_white_24dp" />

</LinearLayout>