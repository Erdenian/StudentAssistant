<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ScheduleCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/card_margin_inside"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/card_primary_text_size"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/card_margin_inside"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/content_alarm_editor_button_time"
                android:text="@string/content_alarm_editor_time"/>

            <include layout="@layout/empty_space_horizontal"/>

            <ToggleButton
                android:id="@+id/card_alarm_toggle_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>


        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:id="@+id/activity_alarm_editor_buttons_day_of_week">

            <ToggleButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textOn="@string/monday"
                android:textOff="@string/monday"
                android:layout_margin="2dp"
                android:background="@drawable/oval_button"/>

            <ToggleButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textOn="@string/tuesday"
                android:textOff="@string/tuesday"
                android:layout_margin="2dp"
                android:background="@drawable/oval_button"/>

            <ToggleButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textOn="@string/wednesday"
                android:textOff="@string/wednesday"
                android:layout_margin="2dp"
                android:background="@drawable/oval_button"/>

            <ToggleButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textOn="@string/thursday"
                android:textOff="@string/thursday"
                android:layout_margin="2dp"
                android:background="@drawable/oval_button"/>

            <ToggleButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textOn="@string/friday"
                android:textOff="@string/friday"
                android:layout_margin="2dp"
                android:background="@drawable/oval_button"/>

            <ToggleButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textOn="@string/saturday"
                android:textOff="@string/saturday"
                android:layout_margin="2dp"
                android:background="@drawable/oval_button"/>

            <ToggleButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textOn="@string/sunday"
                android:textOff="@string/sunday"
                android:layout_margin="2dp"
                android:background="@drawable/oval_button"/>
        </RadioGroup>

    </LinearLayout>

</android.support.v7.widget.CardView>