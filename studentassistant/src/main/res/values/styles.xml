<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar.TranslucentNavigation" parent="AppTheme.NoActionBar" />

    <style name="AppTheme.NoActionBar.TransparentStatusBar" parent="AppTheme.NoActionBar" />

    <style name="SplashTheme" parent="AppTheme.NoActionBar.TranslucentNavigation">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="Toolbar">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="ScheduleCardBase">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="ScheduleCard" parent="ScheduleCardBase">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">@dimen/card_margin_bottom</item>
        <item name="android:layout_marginLeft">@dimen/card_margin_horizontal</item>
        <item name="android:layout_marginRight">@dimen/card_margin_horizontal</item>
        <item name="android:layout_marginTop">@dimen/card_margin_top</item>
    </style>

    <style name="DatePicker" parent="BetterPickersRadialTimePickerDialog.PrimaryColor">
        <item name="bpBodyUnselectedTextColor">@color/colorPrimaryText</item>
        <item name="bpDisabledDayTextColor">@color/colorSecondaryText</item>
    </style>

</resources>
