<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TransparentStatusBar" parent="AppTheme">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="ToolbarButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="ScheduleCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">@dimen/card_margin_bottom</item>
        <item name="android:layout_marginEnd">@dimen/card_margin_horizontal</item>
        <item name="android:layout_marginStart">@dimen/card_margin_horizontal</item>
        <item name="android:layout_marginTop">@dimen/card_margin_top</item>
        <item name="android:foreground">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

</resources>