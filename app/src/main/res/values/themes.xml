<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SplashTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/splash_background</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_foreground</item>

        <item name="postSplashScreenTheme">@style/AppTheme</item>
    </style>

    <style name="Base.AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- region Colors -->
        <item name="android:statusBarColor">@color/status_bar</item>
        <!-- endregion -->

        <!-- region Deprecated, will be deleted when there there are no Android Views -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorSecondary">@color/secondary</item>

        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
        <item name="autoCompleteTextViewStyle">@style/Widget.MaterialComponents.AutoCompleteTextView.OutlinedBox</item>
        <!--suppress AndroidDomInspection -->
        <item name="exposedDropdownMenuStyle">
            @style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu
        </item>
        <!-- endregion -->
    </style>

    <style name="AppTheme" parent="Base.AppTheme" />

</resources>
