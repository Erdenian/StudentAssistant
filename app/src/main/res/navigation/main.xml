<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    app:startDestination="@id/scheduleFragment">

    <fragment
        android:id="@+id/noScheduleFragment"
        android:name="ru.erdenian.studentassistant.ui.main.noschedule.NoScheduleFragment"
        android:label="@string/sa_title"
        tools:layout="@layout/fragment_no_schedule" />

    <fragment
        android:id="@+id/scheduleFragment"
        android:name="ru.erdenian.studentassistant.ui.main.schedule.ScheduleFragment"
        android:label="@string/sa_title"
        tools:layout="@layout/fragment_schedule" />

    <fragment
        android:id="@+id/homeworksFragment"
        android:name="ru.erdenian.studentassistant.ui.main.homeworks.HomeworksFragment"
        android:label="@string/ha_title"
        tools:layout="@layout/fragment_homeworks" />

    <action
        android:id="@+id/action_global_noScheduleFragment"
        app:destination="@id/noScheduleFragment"
        app:popUpTo="@+id/main" />

    <action
        android:id="@+id/action_global_scheduleFragment"
        app:destination="@id/scheduleFragment"
        app:popUpTo="@+id/main" />

    <action
        android:id="@+id/action_global_homeworksFragment"
        app:destination="@id/homeworksFragment"
        app:popUpTo="@+id/main" />

</navigation>