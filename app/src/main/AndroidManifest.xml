<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ru.erdenian.studentassistant">

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <activity
            android:name=".ui.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.schedule.ScheduleActivity"
            android:label="@string/title_activity_schedule"
            android:theme="@style/AppTheme.NoActionBar.TransparentStatusBar" />

        <activity
            android:name=".ui.lessoninformation.LessonInformationActivity"
            android:label="@string/title_activity_lesson_information" />

        <activity
            android:name=".ui.semestereditor.SemesterEditorActivity"
            android:label="@string/title_activity_semester_editor"
            android:windowSoftInputMode="stateAlwaysVisible" />

        <activity
            android:name=".ui.lessonseditor.LessonsEditorActivity"
            android:label="@string/title_activity_lessons_editor"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".ui.lessoneditor.LessonEditorActivity"
            android:label="@string/title_activity_lesson_editor" />

        <activity
            android:name=".ui.homeworks.HomeworksActivity"
            android:label="@string/title_activity_homeworks"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".ui.homeworkeditor.HomeworkEditorActivity"
            android:label="@string/title_activity_homework_editor"
            android:windowSoftInputMode="adjustResize" />

        <service android:name=".service.ScheduleService" />

        <receiver
            android:name=".reciever.BootReceiver"
            android:enabled="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".activity.AlarmActivity"
            android:label="@string/title_activity_alarm"
            android:noHistory="true"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".activity.AlarmEditorActivity"
            android:label="@string/title_activity_alarm_editor"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".activity.HelpActivity"
            android:label="@string/title_activity_help"
            android:theme="@style/AppTheme" />

    </application>

</manifest>